{
  "manifest_version": 2,
  "name": "Magic Systadd",
  "version": "0.1",
  "description": "When it's getting cold out there, our friends from Cote d'Ivoire know how to do",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon16.png"
  },
  "icons": { "16": "icon16.png",
              "64": "icon64.png",
          "128": "icon128.png" },
  "permissions":[
    "tabs",
    "alarms",
    "storage"
  ],
  "options_page": "options.html"
}